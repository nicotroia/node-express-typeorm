{
    "version": "3.7.2",
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "alwaysStrict": true,
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "watch": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*", "dist/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
